<h1 class="text-center">TableSpotter!</h1>
<div class="container">
    <div class="row">
        {{#each reservations}}
        <div class="col-sm-6 p-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{date}}</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">{{time}}</h6>
                    <p class="card-text">{{party_size}}</p>
                    <div class="text-center">
                        <h4 class="mb-5"><span class="badge bg-secondary">Phone number: {{occasion}}</span></h4>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
